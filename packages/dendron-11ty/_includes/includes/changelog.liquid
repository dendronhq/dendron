---
layout: layouts/default.liquid
pagination:
    data: changelog
    size: 30
    alias: commits
templateEngineOverride: liquid
permalink: "notes/changelog.html"
---

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/diff2html/bundles/css/diff2html.min.css" />

<div id="main" role="main">
    <h2>Changelog</h2>
        {%- for commit in commits %}
            {% if commit.changes.length > 0 %}
                <h3>Date: {{commit.commitDate}}</h3>
                <h4>Commit: {{commit.commitHash}}</h4>
                {%- for change in commit.changes %}
                <details>
                    <summary>{{change.action}}: {{change.fname}}</summary>
                    <p style="white-space: pre-line">{{change.diff}}</p>
                </details>
                {% endfor -%}
            {% endif %}
        {% endfor -%}
</div>
