// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension:Local",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder:plugin-core}/out/**/*.js"],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
        "**/extension.js"
      ],
      "env": {
        "STAGE": "dev",
        "VSCODE_DEBUGGING_EXTENSION": "dendron",
        "LOG_LEVEL": "debug"
      }
    },
    {
      "name": "Run Extension:Remote",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
      ],
      "outFiles": ["${workspaceFolder:plugin-core}/out/**/*.js"],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
      ],
      "env": {
        "STAGE": "dev",
        "VSCODE_DEBUGGING_EXTENSION": "dendron",
        "LOG_LEVEL": "debug"
      }
    },
    {
      "name": "Run Extension:Prod",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder:plugin-core}/out/**/*.js"],
      "env": {
        "VSCODE_DEBUGGING_EXTENSION": "dendron",
        "LOG_LEVEL": "debug"
      }
    },
    {
      "name": "Run Extension - webpack",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder:plugin-core}/dist/*.js"],
      "env": {
        "VSCODE_DEBUGGING_EXTENSION": "dendron",
        "LOG_LEVEL": "debug"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Server",
      "restart": true,
      "port": 6009,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder:lsp-server}/out/**/*.js"]
    },
    {
      "name": "Extension Integ Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/src/test/suite-integ/index.js"
      ],
      "env": {
        "TEST_TO_RUN": "",
        "STAGE": "test"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
      ],
      "outFiles": ["${workspaceFolder}/out/src/test/**/*.js"]
    },
    {
      "name": "Extension Integ Tests Remote",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/src/test/suite-integ/index.js"
      ],
      "env": {
        "TEST_TO_RUN": "",
        "STAGE": "test"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
      ],
      "outFiles": ["${workspaceFolder}/out/src/test/**/*.js"]
    },
    {
      "name": "Extension Integ Tests - File",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        //"${workspaceFolder}/fixtures/fake-workspace/dendron.code-workspace",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/src/test/suite-integ/index",
      ],
      "env": {
        "STAGE": "test",
        "TEST_TO_RUN": "${fileBasenameNoExtension}"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
        "**/extensionHostProcess.js"
      ],
      "outFiles": ["${workspaceFolder}/out/src/test/**/*.js"]
    },
    {
      "name": "Extension Integ Tests - File Remote",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/src/test/suite-integ/index",
      ],
      "env": {
        "STAGE": "test",
        "TEST_TO_RUN": "${fileBasenameNoExtension}"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js",
      ],
      "outFiles": ["${workspaceFolder}/out/src/test/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Run Extension", "Attach to Server"]
    }
  ]
}
