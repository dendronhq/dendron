    {
      "name": "Plugin Web Extension Tests in VS Code (File)",
      "type": "extensionHost",
      // "debugWebWorkerHost": true,
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
