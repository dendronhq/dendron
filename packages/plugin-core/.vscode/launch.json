    {
      "name": "Extension Integ Tests - File",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        //"${workspaceFolder}/fixtures/fake-workspace/dendron.code-workspace",
        "--disable-extensions",
