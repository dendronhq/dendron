{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "start debug server",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "PORT": "3005",
        "TS_NODE_LOG_ERROR": "1",
        "LOG_NAME": "api-server",
        "LOG_DST": "../../logs/api-server.log",
        "LOG_LEVEL": "debug"
      },
      "args": [
        "${workspaceFolder:api-server}/src/start.ts"
      ]
    }
  ]
}
