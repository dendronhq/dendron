      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  },
  "dependencies": {
    "@dendronhq/conventional-changelog-dendron": "^5.0.11",
    "github-slugger": "^1.3.0",
    "nodegit": "^0.27.0"
