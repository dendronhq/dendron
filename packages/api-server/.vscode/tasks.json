{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run current file",
      "command": "ts-node ${relativeFile}",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "npm:test:watch",
      "command": "npm run test:watch -- ${relativeFile} -u",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "npm:test:watch:integ",
      "command": "npm run test:watch:integ -- ${relativeFile} -u",
      "type": "shell",
      "problemMatcher": [], 
      "options": {"env": {"LOG_DST": "${env:TEMP}/dendron-api-server.log"}}
    },
    {
      "type": "npm",
      "label": "clean",
      "script": "clean",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "label": "build",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "label": "format",
      "script": "format",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "label": "coverage",
      "script": "coverage",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "label": "test",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "label": "lint",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
