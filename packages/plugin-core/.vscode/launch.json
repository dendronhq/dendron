// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder:plugin-core}/out/**/*.js"],
      "env": {
        "STAGE": "dev",
        "VSCODE_DEBUGGING_EXTENSION": "dendron",
        "LOG_LEVEL": "info"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Server",
      "restart": true,
      "port": 6009,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder:lsp-server}/out/**/*.js"]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "env": {
        "STAGE": "test"
      },
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"]
      // "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Extension Integ Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite-integ/index"
      ],
      "env": {
        "TEST_TO_RUN": "",
        "STAGE": "test"
      },
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"]
    },
    {
      "name": "Extension Integ Tests - File",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        // "${workspaceFolder}/fixtures/fake-workspace",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite-integ/index"
      ],
      "env": {
        "STAGE": "test",
        "TEST_TO_RUN": "${fileBasenameNoExtension}"
      },
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Run Extension", "Attach to Server"]
    }
  ]
}
