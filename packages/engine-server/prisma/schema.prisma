generator client {
  provider = "prisma-client-js"
  binaryTargets = ["darwin-arm64", "darwin"]
  output = "./../src/generated-prisma-client"
}

datasource db {
  provider = "sqlite"
  // this value is filled in dynamically when starting a workspace
  url      = ""
  // uncomment the below when testing
  // url      = "file:./dev.db"
}

model notes {
  fname   String?
  id      String  @id
  title   String?
  vault   String?
  updated Int?
  stub    Boolean?

  @@index([id], map: "idx_notes_id")
}

model VaultMetadata {
    id        Int      @id @default(autoincrement())
    relativePath String
    schemaVersion Int
}