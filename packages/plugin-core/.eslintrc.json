{
  "extends": "../../.eslintrc.js",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "env": {
    "mocha": true
  },
  "rules": {
    // 1. allow anonymous functions inside of mocha tests
    "prefer-arrow-callback": 0,
    "func-names": "off"
    // 1. end
  }
}
